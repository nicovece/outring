{# CTA Link Component
  Renders a styled text link for calls-to-action in cards and similar contexts
  
  Parameters:
  - url: The destination URL
  - label: The visible text to display
  - ariaLabel: (optional) Accessible label for screen readers. Use when label is generic (e.g., "Learn More")
  - additionalClasses: (optional) Additional CSS classes to apply to the link
#}

{% set urlPath =
	url
		|replace({
			(siteUrl): ""
		})
		|trim("/", "left")
		|trim("/")
%}
{% set urlSegment = urlPath|split("/")|first %}

{% set linkStyles = {
	base: "block border-t-2 border-b-2 border-b-accent/50 border-t-transparent transition-all duration-300 font-[600] w-fit relative transform-gpu translate-y-[0px] text-base 2xl:text-lg",
	hover: "hover:border-b-accent hover:text-white hover:translate-y-[-2px]",
  after: "after:content-[''] after:block after:absolute after:top-[100%] after:right-0  after:-bottom-1 after:left-0 after:bg-transparent after:z-[-1] after:transition-all after:duration-200 after:ease-in-out hover:after:-top-1 hover:after:-right-2 hover:after:-bottom-1 hover:after:-left-2 hover:after:bg-accent"
} %}

<a href="{{ url }}" {% if ariaLabel is defined %}aria-label="{{ ariaLabel }}"{% endif %} class="{{ linkStyles.base }} {{ linkStyles.hover }} {{ linkStyles.after }} {{ additionalClasses ?? "" }}">{{ label }}</a>
