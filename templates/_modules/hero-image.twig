{#
    Hero Image Module

    Parameters:
    - image (required): Asset object
    - caption (optional): String - custom caption text

    Usage:
    {% if entry.featuredImage|length %}
      {% include '_modules/hero-image' with {
        image: entry.featuredImage.one(),
        caption: entry.featuredImageCaption
      } only %}
    {% endif %}
  #}

{% if image %}
	{% import "_macros" as macros %}
	<figure class="mb-12">
		<img
			src="{{
			image.getUrl({
				width: 800,
				height: 450,
				mode: "crop"
			})
			}}"
			srcset="{{ macros.srcSet(image, true, "16:9") }}"
			sizes="100vw"
			alt="{{ image.title }}"
			class="w-full"
			loading="eager"
		/>
		{% if caption %}
			<figcaption class="mt-2 text-sm text-gray-600">
				{{ caption }}
			</figcaption>
		{% endif %}
	</figure>
{% endif %}
