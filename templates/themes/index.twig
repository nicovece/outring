{% extends "_layouts/base.twig" %}
{% set page = craft.entries().section("themesIndex").one() %}
{% block title %}
	{{ page.title }} - {{ siteName }}
{% endblock %}

{% block content %}
	{% include "_modules/page-header" with {
		title: page.heroTitle,
		text: page.heroText,
		imageHeight: "full",
		caption: "Themes",
		sectionWidth: "wide"
	} only %}
	<section class="mb-8" data-reveal-group>
		{% set themes = craft.entries().section("themes").all() %}

		<div class="container-wide grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3" data-reveal-item>
			{% for theme in themes %}
				{% include "_partials/entry/taxonomy-card" with {
					entry: theme
				} only %}
			{% endfor %}
		</div>
	</section>
{% endblock %}
