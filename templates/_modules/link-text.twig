{# Link Text Component
  Renders a styled navigation link with active state detection
  
  Parameters:
  - url: The URL for the link
  - label: The text to display
  - additionalClasses: (optional) Additional CSS classes to apply to the link
#}

{% set urlPath =
	url
		|replace({
			(siteUrl): ""
		})
		|trim("/", "left")
		|trim("/")
%}
{% set target = target|default(null) %}
{% set rel = rel|default(null) %}

{# Organize styles by purpose #}
{% set linkStyles = {
	base: "block transition-colors duration-300 relative",
	hover: "hover:text-accent-dark dark:hover:text-accent",
	after: "after:content-[''] after:block after:absolute after:h-[1px] after:right-0  after:-bottom-[2px] after:left-0 after:bg-accent after:transition-all  after:ease-in-out hover:after:h-[3px] hover:after:bg-accent"
} %}

<a
	href="{{ url }}"
	class="{{ linkStyles.base }} {{ linkStyles.hover }} {{ linkStyles.after }} {{ additionalClasses ?? "" }}"
	{{ target ? 'target="' ~ target ~ '"' }}
	{{ rel ? 'rel="' ~ rel ~ '"' }}
>
	{{ label }}
</a>
