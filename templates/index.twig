{% extends "_layouts/base.twig" %}

{% block title %}
	{{ siteName }} - Voices from the Periphery
{% endblock %}

{% block content %}
	{# Hero Section #}
	<section class="bg-gray-50 py-24">
		<div class="container-content text-center">
			<h1 class="mb-6 text-5xl font-bold">Voices from the Periphery</h1>
			<p class="mb-8 text-xl text-gray-600">
				Amplifying the direct voices and lived experiences of residents involved in G124 urban regeneration projects
				across Europe.
			</p>
			<a
				href="/experiences"
				class="inline-block rounded bg-gray-900 px-6 py-3 font-medium text-white hover:bg-gray-700"
			>
				Explore Experiences
			</a>
		</div>
	</section>

	{# Featured Experiences #}
	<section class="container-wide">
		<h2 class="mb-8 text-3xl font-bold">Recent Experiences</h2>

		{% set featured =
			craft.entries().section("experiences").with(["featuredImage", "place", "themes"]).orderBy(
				"dateOfExperience DESC"
			).limit(
				3
			).all()
		%}

		<div class="grid grid-cols-1 gap-8 md:grid-cols-3">
			{% for experience in featured %}
				<article class="experience-card card-experience">
					{# Featured Image #}
					{% if experience.featuredImage|length %}
						{% set image = experience.featuredImage.one() %}
						<a href="{{ experience.url }}">
							<img
								src="{{
								image.getUrl({
									width: 800,
									height: 450,
									mode: "crop"
								})
								}}"
								srcset="{{ macros.srcSet(image, true, "16:9") }}"
								sizes="(max-width: 768px) 100vw, 33vw"
								alt="{{ image.title }}"
								class="h-48 w-full object-cover"
								loading="lazy"
							/>
						</a>
					{% endif %}

					{# Content #}
					<div class="p-6">
						<h3 class="mb-2 text-xl font-bold">
							<a href="{{ experience.url }}" class="hover:text-gray-600">{{ experience.title }}</a>
						</h3>

						{% if experience.shortQuote %}
							<p class="text-sm text-gray-600 italic">
								"{{ experience.shortQuote }}"
							</p>
						{% endif %}
					</div>
				</article>
			{% endfor %}
		</div>

		<div class="mt-12 text-center">
			<a href="/experiences" class="font-medium text-gray-600 hover:text-gray-900">View all experiences →</a>
		</div>
	</section>

	{# About Section #}
	<section class="bg-gray-50 py-16">
		<div class="container-content">
			<h2 class="mb-6 text-3xl font-bold">About This Project</h2>
			<p class="mb-4 text-lg text-gray-600">
				Outring complements the official G124 website by focusing on human stories rather than architectural
				documentation. We emphasize participation, co-design, and everyday life in urban peripheries.
			</p>
			<a href="/about" class="font-medium text-gray-900 hover:underline">Learn more about our method →</a>
		</div>
	</section>
{% endblock %}
