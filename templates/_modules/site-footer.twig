<footer class="mt-auto pt-10">
	<div class="container-wide border-t border-gray-200 pt-10 dark:border-gray-700">
		<div class="grid-rows-auto mb-8 grid grid-cols-1 gap-8 md:grid-cols-[1fr_1fr_1fr] xl:grid-cols-[2fr_1fr_1fr_2fr]">
			{# Column 1: About #}
			<div class="md:col-span-3 xl:col-span-1">
				<h3 class="mb-3 font-bold">
					{% include "_modules/nav-link" with {
						url: url("/"),
						label: "Outring",
						ariaLabel: "Go to home page Outring",
						isActive: true,
						additionalClasses: "font-bold w-fit"
					} only %}
				</h3>
				<p class="text-sm xl:w-2/3 2xl:w-full">
					{{ siteInfo.siteTagline }}
				</p>
			</div>

			{# Column 2: Links #}
			<div>
				<h3 class="mb-3 font-bold">Explore</h3>
				{% set linkClasses = {
					base: "w-fit text-sm 2xl:text-base"
				} %}
				<ul class="space-y-2 text-sm">
					<li>
						{% include "_modules/link-text" with {
							url: url("experiences"),
							label: "Experiences",
							additionalClasses: linkClasses.base
						} only %}
					</li>
					<li>
						{% include "_modules/link-text" with {
							url: url("themes"),
							label: "Themes",
							additionalClasses: linkClasses.base
						} only %}
					</li>
					<li>
						{% include "_modules/link-text" with {
							url: url("places"),
							label: "Places",
							additionalClasses: linkClasses.base
						} only %}
					</li>
					<li>
						{% include "_modules/link-text" with {
							url: url("about"),
							label: "About",
							additionalClasses: linkClasses.base
						} only %}
					</li>
				</ul>
			</div>

			<div>
				<h3 class="mb-3 font-bold">Partecipate</h3>
				<ul class="space-y-2 text-sm">
					<li>
						{% include "_modules/link-text" with {
							url: url("submit"),
							label: "Submit your story",
							additionalClasses: linkClasses.base ~ " text-accent font-semibold"
						} only %}
					</li>
				</ul>
			</div>

			<div class="md:col-span-3 xl:col-span-1">
				<h3 class="mb-3 font-bold">Inspired by</h3>
				<p class="text-sm">
					{% include "_modules/link-text" with {
						url: "https://renzopianog124.com",
						label: "G124 by Renzo Piano Building Workshop",
						additionalClasses: "inline-block",
						target: "_blank",
						rel: "noopener noreferrer"
					} only %}
				</p>
			</div>
		</div>

		<div class="pt-6 text-sm 2xl:text-base">
			<p>
				Demonstration project · December 2025 · Built with{% include "_modules/link-text" with {
					url: "https://craftcms.com",
					label: "Craft CMS",
					additionalClasses: "inline-block",
					target: "_blank",
					rel: "noopener noreferrer"
				} only %}
			</p>
		</div>
	</div>
</footer>
